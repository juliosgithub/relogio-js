Lorem, ipsum dolor sit amet consectetur adipisicing elit. Vel harum, perspiciatis repellat natus omnis, cumque rerum, aliquid eius magni similique consequatur reiciendis fugiat architecto. Quisquam odio sit voluptates laudantium quasi.
</h1>

<script>
    const elementText = document.querySelector('h1');
    function efeitoEscrever(texto){
        const textArray = texto.innerHTML.split('');
        texto.innerHTML = '';
    textArray.forEach((letra,i) => {
        setTimeout(()=> texto.innerHTML += letra, 75*i); 
});
}

efeitoEscrever(elementText)
</script>

